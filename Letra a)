using System;

namespace Atividade_02
{
	class Program
	{
		public static void Main(string[] args)
		{
			Console.WriteLine("------Mostra se o primeiro número é maior que o segundo número------");
			
			Console.Write("Digite o primeiro número: ");
			int primeiroNum = Int32.Parse(Console.ReadLine());
			
			Console.Write("Digite o segundo número: ");
			int segundoNum = Int32.Parse(Console.ReadLine());
			
			
			Maior(primeiroNum, segundoNum);
			Console.ReadKey();
		}
			
		
//Função para realizar o cálculo e mostrar o resto da divisão
		public static int Maior (int primeiroNum, int segundoNum)
		{
			if (primeiroNum > segundoNum)
			{
				Console.Write("\nO primeiro número é maior que o segundo");
				
			} else {
				Console.Write("\nO primeiro número não é maior que o segundo");
				
			}
			
			return primeiroNum;
		}
	}
}
